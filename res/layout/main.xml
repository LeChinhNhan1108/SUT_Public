<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/cyan"
        android:padding="@dimen/padding_15dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/flash_screen_text1"
            android:textSize="60sp"
            android:textColor="@android:color/white"
            android:id="@+id/flashText1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/flash_screen_text2"
            android:textSize="80sp"
            android:textColor="@android:color/holo_orange_light"
            android:id="@+id/flashText2"
            android:layout_below="@+id/flashText1"
            android:layout_alignLeft="@+id/flashText1"
            android:layout_alignStart="@+id/flashText1"/>



</RelativeLayout>